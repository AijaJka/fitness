body
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
main
    flex: 1
main
    display: flex
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center

.banner
    width: 100%;
    height: 185px
    background: #eee
.outbox
    display: flex
    flex-wrap: wrap
    width: 100%;
    height: 481px
    justify-content: center
    overflow-y: scroll 
    
    .ranking-punchcard
        display: flex
        justify-content: space-between
        margin-top: 20px
        width: 93%
        height: 140px
        // background: red
        .tody-ranking
            position relative
            width: 39%
            height: 140px
            background: rgba(blue .5) url('../img/index-card-rank.png')no-repeat
            background-size: 70%
            background-position-y: 25px
            background-position-x: -20px
            border-radius: 20px
            .rankingtext
                position absolute
                font-weight: bold
                top: 12px
                left: 12px
                color: rgba(0, 78, 115, 100)
                font-size: 20px
                font-weight: bold
            .rankingnum
                font-size: 20px
                color: white
                position absolute
                top: 80px
                left: 95px
                font-weight: bold
        .accumulate-punchcard
            position relative
            width: 55%
            height: 140px
            border-radius: 20px
            background: rgba(skyblue .9) url('../img/index-card-sum.png')no-repeat
            background-size: 65%
            .punchcardtext
                position absolute
                font-weight: bold
                top: 15px
                left: 15px
                color: #005177
                font-size: 20px
            .punchcardbtn
                position absolute
                width: 47%
                height: 40px
                top: 80px
                right: 15px
                text-align: center
                color: rgba(0, 78, 115, 100)
                background: rgba(0, 78, 115, 0)
                border: 3px solid rgba(0, 81, 119, 100)
                border-radius: 20px
    .sport-data-emblem
        display: flex
        justify-content: space-between
        margin-top: 15px
        width: 93%
        height: 105px
        .sport-data
            position relative
            width: 46%
            height: 105px
            background: url('../img/index-card-data.png')no-repeat
            background-size: cover
            border-radius: 20px
            .datatext
                font-weight: bold
                position absolute
                color: white
                top: 6px
                left: 6px
            
        .sport-emblem
            position relative
            width: 48%
            height: 105px
            background: rgba(#005177 .5) url('../img/index-card-badge.png')no-repeat
            background-size: 60%;
            background-position-x: 1px;
            border-radius: 20px
            .emblemtext
                font-weight: bold
                position absolute
                top: 6px
                left: 6px
                color: #005177 
            .datanum
                position absolute
                color: #004E73
                font-size: 80px
                top: 10px
                right: 30px
            .datam
                position absolute
                top: 70px
                right: 15px
                color: #005177
                font-size: 18px
    .course
        position relative
        width: 93%
        height: 140px
        margin-top: 15px
        background: url('../img/course-img04.jpg')no-repeat
        background-size: 100%
        background-position-y: -22px
        border-radius: 20px
        .coursetext
            position absolute
            top: 6px
            left: 6px
            color: white
            font-weight: bold

    .outdoors-run
        position relative
        width: 93%
        height: 110px
        margin-top: 20px
        background: url('../img/index-card-run.png')no-repeat
        background-size: 100%
        background-position-y: -40px
        border-radius: 20px
        .outdoorstext
            position absolute
            top: 6px
            left: 6px
            color: white
            font-weight: bold
